<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Service.ViewMangaActivity">

    <RelativeLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:id="@+id/view_chapter_back"
                android:background="@drawable/ic_arrow_left_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        <TextView
                android:id="@+id/text_view_chapter_name"
                android:text="NO PAGE NUMBER"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/view_chapter_next"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_arrow_right_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_manga_pages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>